{
  "name": "alex",
  "version": "0.3.4",
  "main": "electron/dist/main.js",
  "private": true,
  "author": {
    "name": "James Acklin",
    "email": "james@ackl.in"
  },
  "scripts": {
    "dev": "pnpm dev:prerun && next dev",
    "build": "next build",
    "prebuild": "pnpm build:native",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "start": "next start",
    "test": "jest",
    "e2e": "playwright test --config=e2e/playwright.config.ts",
    "e2e:web": "E2E_PLATFORM=web playwright test --config=e2e/playwright.config.ts",
    "e2e:electron": "E2E_PLATFORM=electron playwright test --config=e2e/playwright.config.ts",
    "env:setup": "bash -c 'ENV_HASH=$(node -e \"console.log(require(\\\"crypto\\\").randomBytes(32).toString(\\\"hex\\\"))\"); cp .env.example .env; if [[ \"$OSTYPE\" == \"darwin\"* ]]; then sed -i \"\" \"s/^NEXTAUTH_SECRET=.*/NEXTAUTH_SECRET=${ENV_HASH}/\" .env; else sed -i \"s/^NEXTAUTH_SECRET=.*/NEXTAUTH_SECRET=${ENV_HASH}/\" .env; fi'",
    "setup": "pnpm install && pnpm env:setup && pnpm build:native && mkdir -p data && pnpm db:push && pnpm db:seed",
    "build:native": "node -e \"console.log('No Node native DB modules to rebuild')\"",
    "postinstall": "pnpm build:native",
    "db:push": "node scripts/db-push.js",
    "db:seed": "tsx src/lib/db/seed.ts",
    "watcher": "node scripts/run-watcher-rs.js",
    "watcher:build": "cargo build --manifest-path watcher-rs/Cargo.toml --release --locked",
    "watcher:prepare-dist": "node scripts/prepare-watcher-rs.js",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "pnpm dev:prerun && pnpm watcher:build && pnpm electron:compile && cross-env ALEX_DESKTOP=true electron electron/dist/main.js",
    "electron:rebuild": "node -e \"console.log('No Electron native DB modules to rebuild')\"",
    "prepare:standalone": "node -e \"const fs=require('node:fs');fs.mkdirSync('.next/standalone/.next',{recursive:true});fs.rmSync('.next/standalone/.next/static',{recursive:true,force:true});fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});\"",
    "clean:dist": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "electron:build": "pnpm clean:dist && pnpm build && pnpm prepare:standalone && pnpm watcher:prepare-dist && tsc -p electron/tsconfig.json && pnpm electron:rebuild",
    "electron:build:mac": "pnpm electron:build && electron-builder --mac --arm64 && pnpm build:native",
    "electron:build:win": "pnpm electron:build && electron-builder --win && pnpm build:native",
    "electron:build:linux": "pnpm electron:build && electron-builder --linux && pnpm build:native",
    "dev:prerun": "node scripts/dev-prerun.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "epubjs": "^0.3.93",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "5.4.296",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "react-pdf": "^10.3.0",
    "react-reader": "^2.0.15",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "cross-env": "^7.0.3",
    "electron": "^34.3.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.58.2",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  }
}
