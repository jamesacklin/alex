{
  "name": "alex",
  "version": "0.1.1",
  "main": "electron/dist/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "pnpm build:native",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "start": "next start",
    "test": "jest",
    "test:app": "jest --selectProjects app",
    "test:watcher": "jest --selectProjects watcher",
    "test:watch": "jest --watch",
    "env:setup": "bash -c 'ENV_HASH=$(node -e \"console.log(require(\\\"crypto\\\").randomBytes(32).toString(\\\"hex\\\"))\"); cp .env.example .env; if [[ \"$OSTYPE\" == \"darwin\"* ]]; then sed -i \"\" \"s/^NEXTAUTH_SECRET=.*/NEXTAUTH_SECRET=${ENV_HASH}/\" .env; else sed -i \"s/^NEXTAUTH_SECRET=.*/NEXTAUTH_SECRET=${ENV_HASH}/\" .env; fi'",
    "setup": "pnpm install && pnpm env:setup && pnpm build:native && mkdir -p data && pnpm db:push && pnpm db:seed",
    "build:native": "pnpm rebuild better-sqlite3 canvas",
    "postinstall": "pnpm build:native || echo 'Warning: Failed to build native modules. Run: pnpm build:native'",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/lib/db/seed.ts",
    "db:reset": "rm -f data/library.db data/library.db-shm data/library.db-wal && pnpm db:push && pnpm db:seed",
    "watcher": "tsx watcher/index.ts",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"cross-env ALEX_DESKTOP=true next dev -p 3210\" \"sleep 3 && cross-env ELECTRON_DEV_MODE=true ALEX_DESKTOP=true electron electron/dist/main.js\"",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3,canvas",
    "prepare:standalone": "node -e \"const fs=require('node:fs');fs.mkdirSync('.next/standalone/.next',{recursive:true});fs.rmSync('.next/standalone/.next/static',{recursive:true,force:true});fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});\"",
    "clean:dist": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "electron:build": "pnpm clean:dist && pnpm build && pnpm prepare:standalone && pnpm watcher:build && tsc -p electron/tsconfig.json && pnpm electron:rebuild && if [ \"$(uname)\" = \"Darwin\" ]; then electron-builder --mac --arm64; else electron-builder; fi",
    "watcher:build": "tsc -p watcher/tsconfig.build.json"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "canvas": "^3.2.1",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "epub2": "^3.0.2",
    "epubjs": "^0.3.93",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "5.4.296",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "react-pdf": "^10.3.0",
    "react-reader": "^2.0.15",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@swc/jest": "^0.2.38",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.8",
    "electron": "^34.3.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  }
}
